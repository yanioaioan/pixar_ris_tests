#Rib Test
Display "sphere.tiff" "framebuffer" "rgb"


Projection "perspective" "fov" 45
Format 320 240 1
FrameBegin 1
    Option "trace" "int maxdepth" [5]

    #transform the coordinate system
    Translate 4 -2 20
    Rotate -40 0 1 0
    Rotate -20 1 0 0
    Rotate 5 0 0 1





    WorldBegin

#        AttributeBegin
