        #Create a ground Plane
        TransformBegin
            Translate 0 -7 0
            Scale 50 50 50
            Polygon "P" [
                       -1 0 -1
                        1 0 -1
                        1 0  1
                       -1 0  1
                        ]
        TransformEnd


        TransformBegin
            Translate 0 0 0
            ReadArchive "torusRing.rib"
        TransformEnd

        TransformBegin
            Translate 0 0 2
            ReadArchive "torusRing.rib"
        TransformEnd

        #First Create a light
        LightSource "distantlight" 1 "intensity" 1 "lightcolor" [1 1 1]  "from" [-5 5 -5] "to" [0 0 0]
        #..and then..
        #use a plastic for the 3 following torus rings
        Surface "plastic" "Ka" [0.5] "Kd" [0.7] "Ks" [1.0]

        TransformBegin
            Translate 0 0 4
            ReadArchive "torusRing.rib"
        TransformEnd

        TransformBegin
            Translate 0 0 6
            ReadArchive "torusRing.rib"
        TransformEnd

        TransformBegin
            Translate 0 0 8
            ReadArchive "torusRing.rib"
        TransformEnd



